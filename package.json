{
  "name": "test-poc-mocha-ts",
  "version": "0.0.1",
  "description": "mocha test framework poc with typescript",
  "license": "UNLICENSED",
  "scripts": {
    "preinstall": "sh ./scripts/preinstall.sh",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && yarn lint",
    "lint:pretty": "yarn lint && yarn prettier:check",
    "lint:fix:pretty": "yarn lint:fix && yarn prettier:write",
    "test": "mocha tests",
    "test:parallel": "mocha tests --parallel",
    "test:file": "mocha",
    "test:file:parallel": "mocha --parallel",
    "test:grep": "mocha tests --grep",
    "test:grep:parallel": "mocha tests --parallel --grep",
    "test:watch": "mocha tests --watch"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "axios": "^0.24.0",
    "chai": "^4.3.4",
    "eslint": "^8.2.0",
    "eslint-plugin-mocha": "^9.0.0",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "mochawesome": "^7.0.1",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^6.0.1",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
